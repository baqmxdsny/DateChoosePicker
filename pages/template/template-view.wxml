<!--pages/template/template.wxml-->
<!--时间选择    弹出框-->

  <view wx:if="true" class='template-date-view'>
    <view class='template-dv-header'>滚轮编辑</view>
    <view class='template-date'>
      <view class='template-begindate' bindtap='onChooseDateListener' data-tag='begin'>
        <view class='template-begin-date'>{{dateChoose.beginDate}}</view>
        <view class='{{dateChoose.isBegin?"template-begin-time-view-choose":"template-begin-time-view"}}'>
          <view class='template-begin-time'>{{dateChoose.beginTime}}</view>
          <view class='template-begin-time-type'><view>{{dateChoose.begin_monorafter}}</view></view>
        </view>
      </view>
      <view class='template-center'>
        <image class='template-date-center' src='{{beginToEnd}}'></image>
      </view>
      <view class='template-begindate' bindtap='onChooseDateListener' data-tag='end'>
        <view class='template-begin-date'>{{dateChoose.endDate}}</view>
        <view class='{{!dateChoose.isBegin?"template-begin-time-view-choose":"template-begin-time-view"}}'>
          <view class='template-begin-time'>{{dateChoose.endTime}}</view>
          <view class='template-begin-time-type'>{{dateChoose.end_monorafter}}</view>
        </view>
      </view>
    </view>

    <view class='template-picker-content'>
      <picker-view class="template-picker-view" indicator-style="height: 80rpx; backgourd=#4d4d4d" style="width: 100%; height: 240rpx;" value="{{dateChoose.picker_value}}" bindchange="pickerChange">
        <picker-view-column class='{{dateChoose.isChooseYearMonth?"template-show":"template-hidden"}}'>
          <view  class="template-picker-year" wx:for="{{dateChoose.picker_year}}" style="line-height: 80rpx; height:80rpx">{{item}}年</view>
        </picker-view-column>
        <picker-view-column class='{{dateChoose.isChooseYearMonth?"template-show":"template-hidden"}}'>
          <view class="template-picker-month" wx:for="{{dateChoose.picker_month}}" style="line-height: 80rpx; height:80rpx">{{item}}月</view>
        </picker-view-column>
        <picker-view-column class='{{dateChoose.isChooseYearMonth?"template-show":"template-hidden"}}'>
          <view class="template-picker-day" wx:for="{{dateChoose.picker_day}}" style="line-height: 80rpx; height:80rpx">{{item}}日</view>
        </picker-view-column>
        <picker-view-column class='{{dateChoose.isChooseYearMonth?"template-show":"template-33"}}'>
          <view class="template-picker-hours" wx:for="{{dateChoose.picker_hours}}" style="line-height: 80rpx; height:80rpx">{{item}}</view>
        </picker-view-column>
        <picker-view-column class='{{dateChoose.isChooseYearMonth?"template-show":"template-33"}}'>
          <view class="template-picker-minutes" wx:for="{{dateChoose.picker_minutes}}" style="line-height: 80rpx; height:80rpx">{{item}}</view>
        </picker-view-column>
        <picker-view-column class='{{dateChoose.isChooseYearMonth?"template-show":"template-33"}}'>
          <view class="template-picker-minutes" wx:for="{{dateChoose.picker_monorafter}}" style="line-height: 80rpx; height:80rpx">{{item}}</view>
        </picker-view-column>
      </picker-view>
    </view>

    <view class='template-allday-view'>
      <view class='template-allday-text'>年月</view>
      <switch type='switch' bindchange="isYearMonthListener" checked="{{dateChoose.isChooseYearMonth}}" class='template-allday-switch'></switch>
    </view> 
     <view class='template-picker-bottom'>
      <view class='template-bottom-buttom'>
        <view class='template-bottom-today' bindtap='dateFormReset'>取消</view>
        <view class='template-bottom-ok' bindtap='dateFormSubmit'>确定</view>
      </view>
    </view> 

  </view>


